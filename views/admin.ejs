<%- include("head.ejs") %>
<body>
    <header class="header">
        <div id="logo">
            <a href="/inicio"><img src="Imagenes/undraw_programming_re_kg9v.svg"></a>
        </div>
        
        <nav class="nav-menu">
            <input type="checkbox" id="check">
            <label for="check" class="checkbtn">
                <i class="menu-icon"><img src="Imagenes/menu.png"/></i>
            </label>
            <ul>
                <li class="element-nav"><a href="/inicio">Inicio</a></li>
                <li class="element-nav"><a href="/cursos">Cursos</a></li>
                <li class="element-nav"><a href="/contacto">Contacto</a></li>
                <li class="element-nav" id="myaccount"><a href="/micuenta">Mi Cuenta</a></li>
                <li class="element-nav" id="iniSesion"><a href="/login">Iniciar Sesión</a></li>
            </ul>        
        </nav>
    </header>
    <main>
        <div class="portadaPerfil">
            <div class="contentCuenta">
                <h1 id="nombreUser">Diego Cabrera</h1>
                <button id="btnEditarDatos1" onclick="mostrarForm()" class="btnPerfil">Editar Perfil</button>
                <button id="btnEditarDatos2" onclick="ocultarForm()" class="btnPerfil">Editar Perfil</button>
            </div>
        </div>
        <section id="editarDatos">
            <h1>Edita tus datos</h1>
            <form>
                <div class="formulario__grupo">
                    <label for="nombre" class="formulario__label">Nombre</label>
                    <input type="text" class="formulario__input" name="nombre" id="" required placeholder="Nombre">
                </div>
                    
                <div class="formulario__grupo">
                    <label for="apellido" class="formulario__label">Apellido</label>
                    <input type="text" class="formulario__input" name="apellido" id="" required placeholder="Apellidos">
                </div>
                <div class="formulario__grupo">
                    <label for="telefono" class="formulario__label">Teléfono</label>
                    <input type="tel" class="formulario__input" name="telefono" id="" required placeholder="Teléfono">
                </div>
                <div class="formulario__grupo">
                    <label for="correo" class="formulario__label">Correo</label>
                    <input type="email" class="formulario__input" name="correo" id="" required placeholder="Correo">
                </div>
                <div class="formulario__grupo">
                    <label for="clave" class="formulario__label">Contraseña</label>
                    <input type="password" class="formulario__input" name="clave" id="" required placeholder="Contraseña">
                </div>
                <div class="formulario__grupo">
                    <label for="confirmClave" class="formulario__label">Confirmar Contraseña</label>
                    <input type="password" class="formulario__input" name="confirmClave" id="" required placeholder="Confirmar Contraseña">
                </div>
                <button type="submit" class="formulario__btn">Guardar</button>
            </form>
        </section>


        <div class="cont">
            <a href="/create" class="btn btn-outline-primary mt-4"><ion-icon name="person-add" size="large"></ion-icon></a>
            <% if(rows) { %>
            <table class="table table_bordered table-striped text-center mt-4 tablete">
                <thead>
                    <tr class="bg-primary text-white">
                        <th scope="col">ID</th>
                        <th scope="col">USUARIO</th>
                        <th scope="col">Nom.USUARIO</th>
                        <th scope="col">CORREO</th>
                        <th scope="col">ROL</th>
                        <th scope="col" colspan="2">ACCION</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="table-dark">
                    <% for(i=0; i<rows; i++) { %>
                        <tr>
                            <td><%= results[i].idt_usr %> </td>
                            <td><%= results[i].nam_usr %> </td>
                            <td><%= results[i].usn_usr %> </td>
                            <td><%= results[i].ema_usr %> </td>
                            <td><%= results[i].niv_acc %> </td>
                            <td><a href="/edit/<%=results[i].idt_usr %>" class="btn btn-outline-info"><ion-icon name="create-sharp" size="large"></ion-icon></a></td>
                            <td><a href="/delete/<%=results[i].idt_usr %>" class="btn btn-outline-danger"><ion-icon name="trash-sharp" size="large"></ion-icon></a></td>
                        </tr>
                    <% } %> 
                </tbody>
            </table>
            <% } %>
        </div>

    </main>
    <!-- footer -->
    <%- include("footer.ejs") %>
</body>
<script src="/socket.io/socket.io.js"></script>
<script src="Js/conexion.js"></script>
</html>