  background:transparent;
  border:2px solid #4ad295;
  color:#42d17e;
  }
 @media(max-width: 584px){
 .container{
  max-width: 100%;
}
.contentRegistro form .user-details .input-box{
    margin-bottom: 15px;
    width: 100%;
  }
  .contentRegistro form .category{
    width: 100%;
  }
  .contentRegistro form .user-details{
    max-height: 300px;
    overflow-y: scroll;
  }
  .user-details::-webkit-scrollbar{
    width: 5px;
  }
  }
  @media(max-width: 459px){
  .containerRegistro .contentRegistro .category{
    flex-direction: column;
  }
}

